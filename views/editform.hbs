<button class="btn btn-danger pull-left" style="float: right;margin: 1%;"> 
    <a href="/logout" style="text-decoration: none;color: #fff;"> Logout </a>
</button>
<button class="btn btn-primary pull-left" style="float: left;margin: 1%;"> 
<a href="/customers" style="text-decoration: none;color: #fff;"> Back </a>
</button>
  <h1>{{title}}</h1>
  <hr />
  <div class="row">
    <div class="col-md-6">
      <form action="/edit/{{customers.customer_id}}" method="post">
          <div class="form-group">
              <label for="firstname">First Name</label>
              <input type="text" name="firstname" id="firstname" class="form-control" onkeypress="return isalpha(event)" value= "{{customers.firstname}}" placeholder="First Name" />
          </div>
          <div class="form-group">
              <label for="glass_name">Glass Name</label>
              <input type="text" name="glass_name" id="glass_name" class="form-control"  onkeypress="return isalpha(event)" value= "{{customers.glass_name}}" >
          </div>
          <div class="form-group">
              <label for="lance_number">Lance Number</label>
              <input type="text" name="lance_number" id="lance_number" class="form-control" onkeypress="return decimal_digit(event)"  placeholder="Lance Number" value="{{customers.lance_number}}" />
          </div>
          <div class="form-group">
              <label for="email">Email</label>
              <input type="text" name="email" id="email" class="form-control"  placeholder="Email" value="{{customers.email}}" />
          </div>
          <div class="form-group">
              <label for="phone_number">Phone Number</label>
              <input type="text" name="phone_number" id="phone_number" class="form-control" onkeypress="return isNumber(event)"  placeholder="Phone Number" value="{{customers.phone_number}}" />
          </div>
          <div class="form-group">
              <label for="quntity">Quntity</label>
              <input type="text" name="quntity" id="quntity" class="form-control" onkeypress="return isNumber(event)"  placeholder="Phone Number" value="{{customers.quntity}}" />
          </div>
          <div class="form-group">
                <label for="price">Price</label>
              <input type="text" name="price" id="price" class="form-control" onkeypress="return decimal_digit(event)" value="{{customers.price}}" placeholder="Price" />
          </div>
          <div class="form-group">
              <button class="btn btn-info">Save Customer</button>
          </div>
      </form>
    </div>
  </div>